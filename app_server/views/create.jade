doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Create New Post
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href="#") Travel Blog
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href="home") Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href="#") Explore
          li.nav-item
            a.nav-link(href="destination") Destinations
          li.nav-item
            a.nav-link(href='about') About Us
          li.nav-item
            a.nav-link(href="contact") Contact
          li.nav-item 
            a.nav-link(href='login') Login
          li.nav-item
            a.nav-link(href='create') Create New Post

    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header Create New Post
            .card-body
              form
                .form-group
                  label(for='postTitle') Title
                  input.form-control(type='text', id='postTitle', name='postTitle', required)
                .form-group
                  label(for='postContent') Content
                  textarea.form-control(id='postContent', name='postContent', rows='5', required)
                .form-group
                  label(for='postAuthor') Author
                  input.form-control(type='text', id='postAuthor', name='postAuthor', required)
                .form-group
                  label(for='postDate') Date
                  input.form-control(type='date', id='postDate', name='postDate', required)
                button.btn.btn-primary.btn-block(type='submit') Create Post

    script(src='https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js')
