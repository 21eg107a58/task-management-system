doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Travel Blog
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")

  body
    // Navigation bar with different background color
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href="#") Travel Blog
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href="home") Home 
              span.sr-only (current)
         
          li.nav-item
            a.nav-link(href="destination") Destinations
          li.nav-item
            a.nav-link(href='about') About Us
          li.nav-item
            a.nav-link(href="contact") Contact
          li.nav-item 
            a.nav-link(href='login') Login
          li.nav-item
            a.nav-link(href="create") Create New Post
    
    .container.mt-5
      .row
        .col-md-6.offset-md-3
          h2.text-center.mb-4 Contact Us
          form
            .form-group
              label(for='name') Your Name
              input#name.form-control(type='text' placeholder='Enter your name')
            .form-group
              label(for='email') Email address
              input#email.form-control(type='email' placeholder='Enter your email')
            .form-group
              label(for='message') Message
              textarea#message.form-control(rows='5' placeholder='Enter your message')
            button.btn.btn-primary(type='submit') Submit
    script(src='https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js')
