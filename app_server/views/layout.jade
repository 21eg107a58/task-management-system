doctype html
html(ng-app= 'blogApp')
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Travel Blog
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    

  body
    // Navigation bar with different background color
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href="#") Travel Blog
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href="home") Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href="destination") Destinations
          li.nav-item
            a.nav-link(href='about') About Us
          li.nav-item
            a.nav-link(href="contact") Contact
          li.nav-item 
            a.nav-link(href='login') Login
          li.nav-item
            a.nav-link(href='create') Create New Post
    div.jumbotron.jumbotron-fluid.text-center
      div.container
        h1.display-4 Travel Blog
        p.lead Explore the world's most incredible destinations and get inspired for your next adventure.  

 

    // Footer
    footer.bg-light.text-center.py-3
      | &copy; 2023 Travel Blog

    // Bootstrap scripts
    script(src='/angular/angular.min.js')
    script(src='/angular/blogApp.js')
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
